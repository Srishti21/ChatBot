<Window x:Class="ChatbotClientApp.ChatbotClient"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatbotClientApp"
        xmlns:controls="clr-namespace:QuestionAnswerViewLib;assembly=QuestionAnswerViewLib"
        mc:Ignorable="d"
        Title="ChatbotClient" Height="450" Width="800">
    <Grid>
        <DockPanel>
            <Border DockPanel.Dock="Top" Background="LightBlue" BorderBrush="White" BorderThickness="5">
                <StackPanel>
                    <TextBlock Text="ChatBot" FontSize="20" 
                           HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
                </StackPanel>
            </Border>
            <Border DockPanel.Dock="Top">
                <StackPanel>
                    <controls:QuestionAnswerView/>
                </StackPanel>
            </Border>
            
           
            
         
        </DockPanel>
    </Grid>
</Window>
